# LLM для генерации ответов
LLM_MAIN_URL=https://gemma.cyberden.ru/v1
LLM_MAIN_MODEL=gemma2:2b
LLM_MAIN_KEY=your-main-token-here

# LLM для embeddings
LLM_EMBED_URL=https://nomic-embed-text.cyberden.ru/v1
LLM_EMBED_MODEL=nomic-embed-text
LLM_EMBED_KEY=your-embed-token-here

# Параметры chunking
CHUNK_METHOD=markdown
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Параметры векторного поиска
TOP_K=5
MIN_SIMILARITY=0.6

# Параметры LLM (gemma3)
MAX_TOKENS=2000
TEMPERATURE=0.3
MAX_PROMPT_CHARS=24000

# Параметры параллельной обработки
MAX_CONCURRENCY=3

# Директория для данных (опционально)
DATA_DIR=./data